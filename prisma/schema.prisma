generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  email     String   @unique
  mobile    String   @unique
  password  String
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
}

enum Role {
  USER
  ADMIN
}